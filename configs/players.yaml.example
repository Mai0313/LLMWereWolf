# Example player configuration for LLM Werewolf
# This file demonstrates how to configure custom AI agents and human players

# Optional: Specify a preset for role configuration
# If omitted, uses "9-players" preset by default
# Available presets: 6-players, 9-players, 12-players, 15-players, expert, chaos
preset: "9-players"

# List of players (must match the number required by the preset)
players:
  # OpenAI GPT-4 player
  - name: "GPT-4 Detective"
    provider: openai
    model: gpt-4
    base_url: https://api.openai.com/v1
    api_key_env: OPENAI_API_KEY  # Reference to environment variable
    temperature: 0.7
    max_tokens: 500

  # Anthropic Claude player
  - name: "Claude Analyst"
    provider: anthropic
    model: claude-3-5-sonnet-20241022
    base_url: https://api.anthropic.com
    api_key_env: ANTHROPIC_API_KEY
    temperature: 0.8
    max_tokens: 600

  # OpenAI GPT-3.5 player (more economical)
  - name: "GPT-3.5 Scout"
    provider: openai
    model: gpt-3.5-turbo
    api_key_env: OPENAI_API_KEY
    temperature: 0.6
    max_tokens: 400

  # Local model via Ollama
  - name: "Llama Local"
    provider: local
    model: llama3
    base_url: http://localhost:11434/v1
    api_key_env: null  # No API key needed for local models
    temperature: 0.7
    max_tokens: 500

  # xAI Grok player (uses OpenAI-compatible API)
  - name: "Grok Thinker"
    provider: custom
    model: grok-beta
    base_url: https://api.x.ai/v1
    api_key_env: XAI_API_KEY
    temperature: 0.7
    max_tokens: 500

  # Another Claude player with different settings
  - name: "Claude Guardian"
    provider: anthropic
    model: claude-3-5-sonnet-20241022
    api_key_env: ANTHROPIC_API_KEY
    temperature: 0.5  # Lower temperature for more conservative play
    max_tokens: 400

  # Human player (console input)
  - name: "Human Player 1"
    provider: human
    # No model, base_url, or api_key needed for human players

  # Demo/Random agent (for testing)
  - name: "Random Bot"
    provider: demo
    # No configuration needed for demo agents

  # Another human player
  - name: "Human Player 2"
    provider: human

# Notes:
# 1. All API keys are read from environment variables (.env file)
# 2. Player count must match the preset requirements
# 3. Supported providers: openai, anthropic, local, custom, human, demo
# 4. For custom providers, use OpenAI-compatible API format
# 5. Temperature range: 0.0-2.0 (lower = more deterministic)
# 6. max_tokens: Maximum response length
